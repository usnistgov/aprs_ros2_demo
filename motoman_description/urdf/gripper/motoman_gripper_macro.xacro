<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:macro name="motoman_gripper" params="
        parent
        ">

        <!-- Gripper Link -->
        <link name="motoman_gripper_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="file://$(find motoman_description)/meshes/motoman_gripper_link.STL" />
                </geometry>
            </visual>

            <collision>
                <origin xyz="0 0 -0.005" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="file://$(find motoman_description)/meshes/motoman_gripper_link.STL" />
                </geometry>
            </collision>
            
            <inertial>
                <origin xyz="0 0 -0.005" rpy="0 0 0"/>
                <mass value="0.102"/>
                <inertia ixx="0.0000647" ixy="0.0" ixz="0.0" iyy="0.0000647" iyz="0.0" izz="0.0001276"/>
            </inertial>
        </link>

        <joint name="motoman_gripper_joint" type="fixed">
            <parent link="${parent}"/>
            <child link="motoman_gripper_link"/>
            <origin xyz="0.0 0.021 0.00" rpy="-1.57 -1.57 0.0"/>
        </joint>

        <link name="motoman_left_finger">
            <inertial>
            <origin
                xyz="0.022998 0.021681 -9.1584E-06"
                rpy="0 0 0" />
            <mass
                value="5" />
            <inertia
                ixx="1"
                ixy="3.7227E-06"
                ixz="1.1564E-09"
                iyy="1"
                iyz="-5.5289E-09"
                izz="1" />
            </inertial>
            <visual>
            <origin
                xyz="0 0 0"
                rpy="0 0 0" />
            <geometry>
                <mesh filename="file://$(find motoman_description)/meshes/motoman_left_finger.STL" />
            </geometry>
            <material
                name="">
                <color
                rgba="0.79216 0.81961 0.93333 1" />
            </material>
            </visual>
            <collision>
            <origin
                xyz="0 0 0"
                rpy="0 0 0" />
            <geometry>
                <mesh filename="file://$(find motoman_description)/meshes/motoman_left_finger.STL" />
            </geometry>
            </collision>
        </link>
        <joint
            name="motoman_left_finger_joint"
            type="prismatic">
            <origin
            xyz="0.0005 0 0.162"
            rpy="1.5708 0 0" />
            <parent
            link="motoman_gripper_link" />
            <child
            link="motoman_left_finger" />
            <axis
            xyz="1 0 0" />
            <limit
            lower="0.0"
            upper="0.02"
            effort="100"
            velocity="100" />
        </joint>
        <link
            name="motoman_right_finger">
            <inertial>
                <origin
                    xyz="0.022998 0.021681 -9.8018E-06"
                    rpy="0 0 0" />
                <mass
                    value="5" />
                <inertia
                    ixx="1"
                    ixy="3.7227E-06"
                    ixz="1.199E-09"
                    iyy="1"
                    iyz="-5.7323E-09"
                    izz="1" />
            </inertial>
            <visual>
                <origin
                    xyz="0 0 0"
                    rpy="0 3.1415 0" />
                <geometry>
                    <mesh filename="file://$(find motoman_description)/meshes/motoman_right_finger.STL" />
                </geometry>
                <material
                    name="">
                    <color
                    rgba="0.79216 0.81961 0.93333 1" />
                </material>
            </visual>
            <collision>
                <origin
                    xyz="0 0 0"
                    rpy="0 3.1415 0" />
                <geometry>
                    <mesh filename="file://$(find motoman_description)/meshes/motoman_right_finger.STL" />
                </geometry>
            </collision>
        </link>

        <link name="motoman_tool0"/>
        
        <joint
            name="motoman_right_finger_joint"
            type="prismatic">
            <origin
            xyz="-0.0005 0 0.162"
            rpy="1.5708 0 0" />
            <parent
            link="motoman_gripper_link" />
            <child
            link="motoman_right_finger" />
            <axis
            xyz="-1 0 0" />
            <limit
            lower="0.0"
            upper="0.02"
            effort="100"
            velocity="100" />
            <!-- <mimic joint="motoman_prism_1" multiplier="1" offset="0"/> -->
        </joint>

        <joint name="motoman_tool0_joint" type="fixed">
            <origin xyz=" 0.042 0.0 0.0" rpy="0.0 1.57 0.0" />
            <parent link="motoman_gripper_link"/>
            <child link="motoman_tool0"/>
        </joint>
    </xacro:macro>
  
</robot>